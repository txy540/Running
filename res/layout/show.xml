<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/lin1"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:orientation="horizontal"
        android:background="@drawable/layt"
        android:paddingTop="30dp" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
    >

            <ImageView
                android:id="@+id/imagecal"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:src="@drawable/cal" />

            <TextView
                android:id="@+id/caldata"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imagecal"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:hint="0" />

            <TextView
                android:id="@+id/cal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:text="卡路里" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
             android:layout_weight="1">

            <ImageView
                android:id="@+id/imagetime"
                android:layout_width="60dp"
                android:layout_height="60dp"
                  android:layout_gravity="center"
                android:src="@drawable/max_time" />

            <TextView
                android:id="@+id/timdata"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:hint="0" />

            <TextView
                android:id="@+id/tim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:text="运动时间" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/imagedistance"
                android:layout_width="60dp"
                android:layout_height="60dp"
                 android:layout_gravity="center"
                android:src="@drawable/max_distance" />

            <TextView
                android:id="@+id/disdata"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:hint="0" />

            <TextView
                android:id="@+id/dis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:text="运动距离" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:layout_weight="1"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imagespeed"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:src="@drawable/max_speed" />

            <TextView
                android:id="@+id/spedata"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:hint="0" />

            <TextView
                android:id="@+id/spe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:text="平均速度" />
        </LinearLayout>
    </LinearLayout>
        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="65dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/lin1"
            android:src="@drawable/today_ranking" />
         
    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:gravity="bottom"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/save"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@drawable/show_btn"
            android:text="@string/save" />

        <Button
            android:id="@+id/share"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:background="@drawable/show_btn"
            android:layout_weight="1"
            android:text="@string/share" />
    </LinearLayout>

</RelativeLayout>